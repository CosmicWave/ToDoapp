<%= form_for @task, url: tasklist_tasks_path(tasklist_id: @tasklist.id) ,method: :post do|f| %>

</br><h3 class="form">Tasks</h3>

<table class="table table-stripped form"> 

	<tr>
	<td>
	<p class="form">
		<%= f.label :title %></br>
		<%= f.text_field :title %>
	</p>
	</td>
	<td>
	<p class="form">	
		<%= f.label :description %></br>
		<%= f.text_area :description %>
	</p>
	</td>
	<td>
	 <p class="form">
          <%= f.label :priority %></br>
          <%= f.radio_button :priority, 'Low' %>
          <%= f.label :priority, 'Low'%></br>
          <%= f.radio_button :priority, 'Medium' %>
          <%= f.label :priority, 'Medium' %></br>
          <%= f.radio_button :priority, 'High' %> 
          <%= f.label :priority, 'High' %></br>
    </p>
    </td>

    <td>
	<p class="form">
          <%= f.label :status %></br>
          <%= f.radio_button :status, 'Not Started' %>
          <%= f.label :status, 'Not Started'%></br>
          <%= f.radio_button :status, 'In Progress' %>
          <%= f.label :status, 'In Progress' %></br>
          <%= f.radio_button :status, 'Completed' %> 
          <%= f.label :status, 'Completed' %></br>
    </p>
    </td>
	</tr>
</table>

	<p class="form"> 
		<%= f.submit 'Submit' %>
	</p>


<% end %>




<table class="table table-stripped form">  
<div class="container">
<thead>
	<th class="form">Title</th>
	
	<th class="form">Description</th>
	
	<th class="form">Priority</th>
	
	<th class="form">Status</th>
<thead>	


<% @tasklist.tasks.each do |task| %>
	
	

	<tr>
	<td>
	<p class="showpage-description"> <%= task.title %> </p>
	</td>
	<td>
	<p class="showpage-description"> <%= task.description %> </p>
	</td>
	<td>
	<p class="showpage-description"> <%= task.priority %> </p>
	</td>
	<td>
	<p class="showpage-description"> <%= task.status %> </p>
	</td>
	<td class="index-text">
	<%= link_to 'Task Edit', edit_tasklist_task_path(id: task.id, tasklist_id: @tasklist) %>
	</td>
	<td class="index-text">
	<%= link_to 'Destroy', tasklist_task_path(tasklist_id: @tasklist.id, id: task.id), method: :delete %>
	</td>

	</tr>

<% end %>
</table>
</div>

</div>
 <%= yield %>