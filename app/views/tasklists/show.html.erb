

<div class="background-image-showpage">


<h1 class="form">Main</h1>


<table class="table table-stripped form"> 
		<thead>
		<th class="form">Title</th>
		<th class="form">Description</th>
		</thead>

		<tr>
		<td>
		<p class="form showpage-description"><%= @tasklist.title %> </p>
		</td>
		<td>
		<p class="form showpage-description"> <%= @tasklist.description %> </p>
